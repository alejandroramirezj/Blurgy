{
  "manifest_version": 3,
  "name": "Blurgy",
  "version": "3.0",
  "description": "Difumina, elimina y edita elementos de cualquier p√°gina web",
  "icons": {
    "16": "blur16.png",
    "48": "blur48.png",
    "128": "blur128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "blur16.png",
      "48": "blur48.png",
      "128": "blur128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blur.png", "borrar.png", "editar.png", "desactivado.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
